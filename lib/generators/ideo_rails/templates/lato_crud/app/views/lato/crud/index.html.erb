<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
%>

<!-- MAIN CONTAINER -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:widgets, :index).new(
      records: @widget_index_datas,
      index_url: lato_datas_path,
      head: ['Id', 'Name'],
      columns: [:id, :name],
      search: true,
      pagination: true,
      actions: {
        edit: true,
        new: true,
        delete: true,
        show: true,
      }
    ) %>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / MAIN CONTAINER -->