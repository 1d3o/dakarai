  # initialize index
  index = cell(:widgets, :index).new(
    records: @widget_index_<%= @plural_name %>,
    index_url: lato_<%= @plural_name %>_path,
    head: ['Id', 'Name'],
    columns: [:id, :name],
    search: true,
    pagination: true,
    actions: {
      edit: true,
      new: true,
      delete: true,
      show: true,
    }
  )
%>

